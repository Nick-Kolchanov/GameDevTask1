<Window x:Class="GameDevTask1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameDevTask1"
        mc:Ignorable="d"
        Title="MainWindow" Height="916" Width="432">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="\assets\1.jpg" Opacity="0.9"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Grid.Row="1" Content="Старт!" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="72" FontFamily="Bahnschrift" Foreground="White" Background="#7F1F1F1F" BorderBrush="Black" Click="Button_Click"/>
        <Label Grid.Row="2" Content="Автор: Колчанов Никита" HorizontalAlignment="Center" Margin="0,0,0,20" VerticalAlignment="Bottom" FontStyle="Italic" Foreground="White" FontSize="24"/>
        <Label Content="Tic-tac-toe" HorizontalAlignment="Center" Margin="0,60,0,0" VerticalAlignment="Center" Foreground="White" FontFamily="Bahnschrift" FontSize="72"/>
    </Grid>
</Window>
